@model IEnumerable<Core_WebApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <!--Tag Helpers are Attribute to HTML element to run at server -->
    <!--asp-action will make Http Request to Create action method in controller-->
    
    <a asp-action="Create" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <!--Html helper method to generate <span>-->
                @Html.DisplayNameFor(model => model.CategoryRowId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryRowId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasePrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryRowId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryRowId })|
                @Html.ActionLink("ShowProducts", "ShowProducts", new { id = item.CategoryRowId })
            </td>
        </tr>
}
    </tbody>
</table>
